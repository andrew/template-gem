# This is a config synced from <%= org %>/template-gem repo

sources:
  - repo: <%= org %>/template-gem
    sync:
      <% if custom_ci -%>
      - "!.github/workflows/ci.yml.erb"
      <% end %>
      - ".repobot.yml.erb"
      - ".devtools/templates/*.sync:${{dir}}/${{name}}"
      - ".github/**/*.*"
      - "gemspec.erb:<%= name %>.gemspec"
      - "spec/support/*"
      - "CODE_OF_CONDUCT.md"
      - "CONTRIBUTING.md"
      - "LICENSE.erb"
      - "README.md.erb"
      - "Gemfile.devtools"
      - ".rspec"
      - ".rubocop.yml"
  - repo: action-hero/workflows
    sync:
      - ".github/workflows/*.yml"
